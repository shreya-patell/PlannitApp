<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/b1"
    tools:context=".EventInvitesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/invitesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Invites"
            android:textColor="@color/black"
            android:textSize="24sp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inviteNameField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20sp"
                android:width="250dp"
                android:hint="Name"
                android:textColor="@color/black"></EditText>

            <Button
                android:id="@+id/inviteUserBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#5DDBA7"
                android:text="Invite"
                android:textColor="@color/black"></Button>
        </LinearLayout>
        <TextView
            android:id="@+id/invitesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:height="400dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp">
            <Button
                android:id="@+id/backToMapBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:backgroundTint="#5DDBA7"
                android:text="Back"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/goToReviewBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:backgroundTint="#5DDBA7"
                android:text="Next"
                android:textColor="@color/black"></Button>
        </LinearLayout>
    </LinearLayout>

</ScrollView>